<div class="row text-center">
  <h3>Add Word</h3>
</div>

  <form class="form-horizontal" action="/" method="post">

    <div class="form-group">
      <label for="word_name" class="text-muted">Word Name</label>
      <input type="text" name="word_name" class="form-control">
    </div>

    <div class="form-group inline-form">
      <label for="definition" class="text-muted">Definition</label>
      <input type="text" name="definition" class="form-control">

    </div>

    <button class="btn btn-primary" type="submit">Add</button>
    <a class="btn btn-warning" href="/">Back</a>
  </form>
