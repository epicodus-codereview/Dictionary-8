<h3><%= @word.name %></h3>
<div class="row">
 <div class="col-md-3">

<table class="table table-striped">
  <tr>
    <th class="text-muted" width="8%">Definitions</th>
    <th></th>
  </tr>
  <% index = 1 %>
  <% @word.definitions.each do | definition | %>
  <tr>
    <td class="text-muted text-right"><%= index %>)</td>
    <td><%= definition.statement %></td></tr>
    <% index += 1 %>
  </tr>
    <% end %>
</table>
  </div>
</div>


<a class="btn btn-primary" href="/">Go Back<a>
  <a class="btn btn-danger" href="/add_definition/<%= @word.id %>">Add a Definition<a>  
